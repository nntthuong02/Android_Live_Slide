<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/change_wallpaper_button"
            android:layout_width="@dimen/activate_button_size"
            android:layout_height="@dimen/activate_button_size"
            android:layout_marginTop="@dimen/activate_button_margin_top"
            app:cardBackgroundColor="@color/white_mod"
            android:text="@string/activate"
            app:strokeWidth="5dp"
            app:strokeColor="#AAA"
            app:cardCornerRadius="@dimen/activate_button_size">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/change_wallpaper"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wallpaper_settings_button"
            android:layout_width="@dimen/activate_button_size"
            android:layout_height="@dimen/activate_button_size"
            android:layout_marginTop="@dimen/activate_button_margin_top"
            app:cardBackgroundColor="@color/white_mod"
            app:strokeWidth="5dp"
            app:strokeColor="#AAA"
            app:cardCornerRadius="@dimen/activate_button_size">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/wallpaper_settings"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>